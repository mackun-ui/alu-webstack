global
    log /dev/log local0
    maxconn 4096
    user haproxy
    group haproxy
    daemon
    ssl-default-bind-ciphers ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384
    ssl-default-bind-options no-sslv3

defaults
    log global
    mode http
    option httplog
    option dontlognull
    retries 3
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms

frontend https-in
    bind *:443 ssl crt /etc/ssl/certs/haproxy-www.pem
    mode http
    default_backend webservers

backend webservers
    mode http
    balance roundrobin
    server 6878-web-01 98.94.46.177:80 check
    server 6878-web-02 3.87.243.253:80 check

